---
import Layout from '~/layouts/CNPageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  // Title remains the same, 'Moxin AI' is kept as is.
  title: 'Moxin AI | 真正开放，完全可复现的AI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: '前往 Hugging Face', href: 'https://huggingface.co/moxin-org',
        target: '_blank',
        icon: 'tabler:download',
      },
      {
        text: '阅读论文', href: 'https://arxiv.org/abs/2412.06845',
        target: '_blank',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Moxin AI 主页图片' }} >
    <Fragment slot="title">
      Moxin LLM/VLM <br />真正<span class="text-accent dark:text-white">开放</span>，完全<span class="text-accent dark:text-white">可复现</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Moxin LLM</span> 是一款高性能语言模型。
      </span>
      在零样本任务上实现了SOTA（最先进）性能，专为高效运行而设计，尤其适用于边缘设备。
    </Fragment>
  </Hero>


  <Note title="Moxin AI 核心理念：" description="真正开放，完全可复现，高性能。" />

  <Features
    id="features"
    tagline="核心特性" title="为何选择 Moxin AI？" subtitle="专为开发者和研究人员设计的透明且强大的语言模型。" items={[
      {
        title: '真正开放与可复现', description:
          '完整提供模型权重、训练数据和脚本，确保透明度和可定制性。', icon: 'tabler:database-search',
      },
      {
        title: 'SOTA级性能', description:
          '在零样本基准测试中达到最先进水平，性能媲美DeepSeek等领先模型。', icon: 'tabler:rocket',
      },
      {
        title: '边缘AI优化', description:
          '专为边缘设备设计，配合OminiX引擎实现高效性能。', icon: 'tabler:device-mobile-code',
      },
      {
        title: '先进架构', description:
          'GPRO增强学习和Tokenizer MOE架构，提供卓越性能和效率。', icon: 'tabler:brain',
      },
    ]}
  />

  <Content
    isAfterContent
    tagline="应用场景" title="使用 Moxin AI 构建" items={[
      {
        title: '机器人与自动化', description: `针对特定机器人指令和工业应用进行微调。`, },
      {
        title: '边缘AI解决方案', description:
          "在设备上直接运行AI，确保隐私和低延迟。",
      },
      {
        title: '研究平台', description:
          '完全可复现和透明，是学术研究的理想选择。', },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Moxin AI 应用示例概念图', }}
  >
    <Fragment slot="content">灵活的AI，创新的应用。</Fragment> <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    tagline="Moxin 生态系统" title="Moxin 个人AI堆栈" items={[
      {
        title: 'Moxin AI：核心模型', description:
          '一个高性能、真正开放且完全可复现的语言模型，是整个生态系统的核心。',
      },
      {
        title: 'MoFa：智能代理框架', description:
          '利用 Moxin AI 的能力构建智能代理。', },
      {
        title: 'Moly：Rust LLM客户端', description:
          '开发者工具，包括一个Rust LLM客户端，用于与 Moxin 生态系统进行交互。', },
      {
        title: 'OminiX：边缘推理与微调引擎', description:
          '确保 Moxin AI 在边缘设备上高效运行，并实现优化性能。', },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Moxin 个人AI堆栈概念图', }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">全面的AI生态系统</h3>
      Moxin AI 与 MoFa、Moly 和 OminiX 共同构成了 Moxin 个人AI堆栈，旨在建立强大的贡献者社区。
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps
    title="开始使用 Moxin AI" items={[
      {
        title: '第一步：<span class="font-medium">下载模型</span>', description:
          '从Hugging Face获取Moxin AI模型：Base、Chat、Instruct和Reasoning版本。', icon: 'tabler:atom-2',
      },
      {
        title: '第二步：<span class="font-medium">使用OminiX部署</span>', description:
          '利用OminiX引擎在边缘设备上获得最佳性能。', icon: 'tabler:player-play',
      },
      {
        title: '开始构建！', description: '使用真正开放且可复现的AI开始创造。', icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: '使用 Moxin AI 的步骤概念图', }}
  />

  <FAQs
    title="常见问题" subtitle="关于Moxin AI功能和使用的常见问题。" tagline="常见问题解答" classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Moxin AI为何称之为"真正开放"？', description: '完整提供模型权重、训练数据构成和脚本，实现完全可复现性。', },
      {
        title: '如何在边缘设备上运行Moxin AI？', description: '使用OminiX推理引擎，针对包括NPU在内的各种硬件进行了优化。', },
      {
        title: '我可以构建哪些应用？', description: '机器人技术、翻译、设备端智能助手和本地知识库应用等。', },
      {
        title: '在哪里可以找到模型和资源？', description: '模型在Hugging Face (moxin-org)，代码和文档在GitHub (moxin-org/Moxin-LLM)。', },
    ]}
  />

  <Stats
    stats={[
      { title: 'Hugging Face 下载量', amount: '2K+' },
      { title: 'GitHub 星标数', amount: '124+' },
      { title: '活跃模型数量', amount: '4+' },
      { title: '社区成员', amount: '持续增长' },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: '加入 Moxin Discord', href: 'https://discord.gg/MzzC64xfu6',
        target: '_blank',
        icon: 'tabler:brand-discord',
      },
    ]}
  >
    <Fragment slot="title">
      加入 Moxin <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">社区</span> </Fragment>

    <Fragment slot="subtitle">
      成为真正开放、可复现、高性能AI运动的一部分。<br class="hidden md:inline" />立即开始构建和贡献吧！
    </Fragment>
  </CallToAction>
</Layout>