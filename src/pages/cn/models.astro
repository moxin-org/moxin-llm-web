---
import Layout from '~/layouts/CNPageLayout.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import heroImage from '~/assets/images/hero-image-2.png';

const metadata = {
  // Translated title: "模型中心" is common for "Model Hub"
  title: '模型中心',
  // Translated description: "探索 Moxin AI 模型家族，包括我们的基础版、指令版、推理版以及视觉语言模型 (VLM)。"
  description: '探索 Moxin AI 模型家族，包括我们的基础版、指令版、推理版以及视觉语言模型 (VLM)。',
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl">
      <div class="flex flex-col md:flex-row items-center gap-8">
        <div class="md:w-1/2">
          <img
            class="rounded-md w-full"
            src={heroImage.src}
            alt="Moxin AI 主页图片" width={700}
            height={500}
          />
        </div>
        <div class="md:w-1/2 text-center md:text-left">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
            模型中心 </h1>
          <p class="mt-4 text-xl text-muted">
            开源模型家族，涵盖通用、推理和多模态理解。 </p>
        </div>
      </div>
    </div>
  </section>

  <Features
    isGrid
    columns={2}
    items={[
      {
        title: 'Moxin-7B-Base',
        description: `基础预训练模型，适合定制化微调。基于增强型Mistral架构，使用2万亿+token训练。
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-llm-7b" target="_blank">HF 卡片</a> <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:box',
      },
      {
        title: 'Moxin-7B-Instruct',
        description: `指令遵循和对话AI助手。使用Tülu 3框架，通过SFT和DPO微调。
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-instruct-7b" target="_blank">HF 卡片</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:message-chatbot',
      },
      {
        title: 'Moxin-7B-Reasoning',
        description: `数学、逻辑和编码的高级推理模型。通过GRPO强化学习增强。
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-reasoning-7b" target="_blank">HF 卡片</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:math-symbols',
      },
      {
        title: 'Moxin-7B-VLM',
        description: `多模态理解的视觉语言模型。结合Moxin-7B-Base与DINOv2和SigLIP编码器。
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-vlm-7b" target="_blank">HF 卡片</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-VLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:photo',
      },
    ]}
  />

  <CallToAction
    title="准备好构建了吗？" subtitle="模型、代码和数据均可在Hugging Face和GitHub获取。" actions={[
      {
        variant: 'primary',
        text: '在 Hugging Face 上查看', href: 'https://huggingface.co/moxin-org',
        target: '_blank',
        icon: 'tabler:cloud-download',
      },
      {
        variant: 'secondary',
        text: '在 GitHub 上查看', href: 'https://github.com/moxin-org/Moxin-LLM',
        target: '_blank',
        icon: 'tabler:brand-github',
      }
    ]}
  />

</Layout>