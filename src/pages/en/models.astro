---
import Layout from '~/layouts/PageLayout.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import heroImage from '~/assets/images/hero-image-2.png';

const metadata = {
  title: 'Model Hub',
  description: 'Explore the family of Moxin AI models, including our Base, Instruct, Reasoning, and Vision Language Models (VLM).',
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl">
      <div class="flex flex-col md:flex-row items-center gap-8">
        <!-- Image Column -->
        <div class="md:w-1/2">
          <img
            class="rounded-md w-full"
            src={heroImage.src}
            alt="Moxin AI Hero Image"
            width={700}
            height={500}
          />
        </div>
        <!-- Text Column -->
        <div class="md:w-1/2 text-center md:text-left">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
            Model Hub
          </h1>
          <p class="mt-4 text-xl text-muted">
            Open-source models for general use, reasoning, and multimodal understanding.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Features
    isGrid
    columns={2}
    items={[
      {
        title: 'Moxin-7B-Base',
        description: `Foundational pre-trained model for custom fine-tuning. Enhanced Mistral architecture trained on 2+ trillion tokens.
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-llm-7b" target="_blank">HF Card</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:box',
      },
      {
        title: 'Moxin-7B-Instruct',
        description: `AI assistant fine-tuned for instruction following and dialogue. Uses SFT and DPO with TÃ¼lu 3 framework.
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-instruct-7b" target="_blank">HF Card</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:message-chatbot',
      },
      {
        title: 'Moxin-7B-Reasoning',
        description: `Advanced reasoning for math, logic, and coding. Enhanced with GRPO reinforcement learning.
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-reasoning-7b" target="_blank">HF Card</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-LLM" target="_blank">GitHub</a>
        </div>`,
        icon: 'tabler:math-symbols',
      },
      {
        title: 'Moxin-7B-VLM',
        description: `Vision-language model for multimodal understanding. Combines Moxin-7B-Base with DINOv2 and SigLIP encoders.
        <div class="mt-4">
          <a class="btn btn-sm" href="https://huggingface.co/moxin-org/moxin-vlm-7b" target="_blank">HF Card</a>
          <a class="btn btn-sm ml-2" href="https://github.com/moxin-org/Moxin-VLM" target="_blank">GitHub</a>
          
        </div>`,
        icon: 'tabler:photo',
      },
    ]}
  />

  <CallToAction
    title="Ready to Build?"
    subtitle="Models, code, and data available on Hugging Face and GitHub."
    actions={[
      {
        variant: 'primary',
        text: 'View on Hugging Face',
        href: 'https://huggingface.co/moxin-org',
        target: '_blank',
        icon: 'tabler:cloud-download',
      },
      {
        variant: 'secondary',
        text: 'View on GitHub',
        href: 'https://github.com/moxin-org/Moxin-LLM',
        target: '_blank',
        icon: 'tabler:brand-github',
      }
    ]}
  />

</Layout>
